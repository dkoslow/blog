<div class="post">
  <h2><%= @post.title %></h2>
  <%= form_for @post do |f| %>
    <div class="field">
      <%= f.label :title %></br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :content %></br>
      <%= f.cktext_area :content, toolbar: 'Full' %>
    </div>
    <div class="actions">
      <%= f.submit "Update post", class: "btn btn-large btn-primary" %>
    </div>
  <% end %>
</div>
