<h1 class="post"> <%= @post.title %></h1>
<div class="row">
  <div class="span8">
    <%= form_for @post do |f| %>
      <div class="field">
        <%= f.label :title %></br>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :content %></br>
        <%= f.text_area :content %>
      </div>
      <div class="post_actions_admin_buttons">
        <div class="actions">
          <%= f.submit "Update post", class: "btn btn-large btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>